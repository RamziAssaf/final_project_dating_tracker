<!-- Validation failure messages -->
<% if @partner.errors.any? %>
  <% @partner.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Partner</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_partner/<%= @partner.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id_1 -->
      <div class="form-group">
        <input type="hidden" id="user_id_1" name="user_id_1" placeholder="User id 1" class="form-control" value="<%= @partner.user_id_1 %>">
      </div>

      <!-- Label and input for user_id_2 -->
      <div class="form-group">
        <label for="user_id_2" class="control-label">
          Name of partner
        </label>

        <input type="text" id="user_id_2" name="user_id_2" placeholder="Enter partner name here..." class="form-control" value="<%= @partner.user_id_2 %>">
      </div>

      <button class="btn btn-warning">
        Update
      </button>
      or
      <a href="/partners">Back</a>
    </form>
  </div>
</div>