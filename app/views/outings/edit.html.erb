<!-- Validation failure messages -->
<% if @outing.errors.any? %>
  <% @outing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Outing</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_outing/<%= @outing.id %>/<%= @partnerid %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for activity -->
      <div class="form-group">
        <label for="activity" class="control-label">
          Activity
        </label>

        <textarea id="activity" name="activity" placeholder="Activity" class="form-control" rows="3"><%= @outing.activity %></textarea>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Date" class="form-control" value="<%= @outing.date %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= @partnerid %>">
      </div>

      <button class="btn btn-warning">
        Update
      </button>
      or
      <a href="/outings/<%= @partnerid %>">Cancel</a>
    </form>
  </div>
</div>
