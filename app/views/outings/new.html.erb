<!-- Validation failure messages -->
<% if @outing.errors.any? %>
  <% @outing.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Outing</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_outing" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for activity -->
      <div class="form-group">
        <label for="activity" class="control-label">
          Activity
        </label>

        <textarea id="activity" name="activity" placeholder="Enter activity here" class="form-control" rows="3"><%= @outing.activity %></textarea>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Enter date of outing here" class="form-control" value="<%= @outing.date %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" class="form-control" value="<%= @partner_id %>">
      </div>

      <button class="btn btn-success">
        Add
      </button>
      <!-- button_to "Add", "/outings/<%= @partner_id %>", :class => "button" %> -->
      or
      <a href="/outings/<%= @partner_id %>">Cancel</a>
    </form>
  </div>
</div>
